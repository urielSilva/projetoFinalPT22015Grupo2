.row

  = render '/layouts/cruds/header_index_crud'

- if @user_statuses.empty?
  = render '/layouts/errorempty'

- else

  table.table.table-hover.table-responsive

    thead
      tr
        th ID
        th Status
        th
        - if current_user.admin?
          th
          th

    tbody

      - @user_statuses.each do |user_status|

        tr
          td
            strong
              = user_status.id
          td = user_status.status
          td
            .icon-show
              = link_to '', user_status, class:'glyphicon glyphicon-eye-open', title:'Exibir'

          - if current_user.admin?
            td
              .icon-show
                = link_to '', edit_user_status_path(user_status), class:'glyphicon glyphicon-pencil', title:'Editar'

            td
              .icon-show
                = link_to '', user_status, data: {:confirm => 'VocÃª tem certeza?'}, :method => :delete, class:'glyphicon glyphicon-remove', title:'Excluir'

  br
  = render '/layouts/cruds/footer_index_crud'

- if @projectstatuses.size == 0
  = render '/layouts/errorempty'
  .vertical-align
    = link_to 'Novo Estado', new_project_status_path, class:'btn btn-primary btn-empty'

- else

  h3.text-right Estados de Projeto

  table.table.table-hover.table-responsive

    thead
      tr
        th ID
        th Estado
        th
        th
        th

    tbody
      
      - @projectstatuses.each do |project_status|
      
        tr
          td
            strong
              = project_status.id
          td = project_status.status
          td = link_to 'Exibir', project_status
          td = link_to 'Editar', edit_project_status_path(project_status)
          td = link_to 'Excluir', project_status, data: {:confirm => 'VocÃª tem certeza?'}, :method => :delete

  br

  = link_to 'Novo Estado', new_project_status_path, class:'btn btn-primary'

  - if current_user.profile_id == 1
    = link_to 'Voltar', member_path, class:'btn btn-primary pull-right'

  - else
    = link_to 'Voltar', admin_path, class:'btn btn-primary pull-right'